{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "repo": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "maxLength": 200
    },
    "type": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "lib",
            "solver",
            "data",
            "app"
          ]
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "build": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "wmake",
            "cmake"
          ]
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "version": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "integer"
          }
        ]
      }
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "name",
    "repo",
    "build"
  ]
}
